{% extends 'base.html.twig' %}

{% block body %}
{% block fos_user_content %}
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="col-md-4 col-md-offset-4" action="{{ path("fos_user_security_check") }}" method="post">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

  <div class="form-group">
    <input class="form-control" placeholder="Identifiant" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
  </div>

  <div class="form-group">
    <input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" />
  </div>

  <div class="form-group">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Se souvenir de moi</label>
  </div>

  <input class="form-control" type="submit" id="_submit" name="_submit" value="Connexion" />
  <a class="btn btn-default form-control" href="{{ path("fos_user_registration_register") }}">Inscription</a>
</form>
{% endblock fos_user_content %}
{% endblock %}
